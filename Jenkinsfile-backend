pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'ticketing_backend'
        CONTAINER_NAME = 'ticketing_backend'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code...'
                checkout scm
            }
        }
        
        stage('Build & Test') {
            steps {
                dir('backend') {
                    echo 'Installing Composer dependencies...'
                    sh 'composer install --no-dev --optimize-autoloader'
                    
                    echo 'Running tests (if available)...'
                    sh 'composer test || echo "No tests configured"'
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                dir('backend') {
                    echo 'Building Docker image...'
                    sh "docker build -t ${DOCKER_IMAGE}:latest -f dockerfile ."
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying backend container...'
                sh """
                    # Stop and remove existing container if running
                    docker stop ${CONTAINER_NAME} || true
                    docker rm ${CONTAINER_NAME} || true
                    
                    # Run new container
                    docker run -d \
                        --name ${CONTAINER_NAME} \
                        --network ticketing_ticketing-network \
                        -p 5000:80 \
                        -v /DATA/AppData/ticket/backend:/var/www/html \
                        -e APP_ENV=local \
                        -e APP_DEBUG=true \
                        -e DB_HOST=ticketing_db \
                        -e DB_PORT=3306 \
                        -e DB_DATABASE=ticket_db \
                        -e DB_USERNAME=root \
                        -e DB_PASSWORD=rootpass \
                        ${DOCKER_IMAGE}:latest
                """
            }
        }
    }
    
    post {
        success {
            echo 'Backend deployment completed successfully!'
        }
        failure {
            echo 'Backend deployment failed!'
        }
        always {
            echo 'Cleaning up workspace...'
            cleanWs()
        }
    }
}
